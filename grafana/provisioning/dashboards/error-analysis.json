          },
          "unit": "percent"
        },
        "overrides": []
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "id": 6,
      "options": {
        "calculate": true,
        "showHeader": true,
        "sortBy": [
          {
            "desc": true,
            "displayName": "Error %"
          }
        ]
      },
      "targets": [
        {
          "expr": "sum(rate(http_request_errors_total[$__rate_interval])) by (route) / clamp_min(sum(rate(http_request_total[$__rate_interval])) by (route), 1e-6) * 100",
          "format": "table",
          "legendFormat": "",
          "refId": "A"
        }
      ],
      "title": "Error Rate by Route",
      "transformations": [],
      "type": "table"
